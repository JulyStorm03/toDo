<Window x:Class="todoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <!-- Header -->
        <Border Background="#363636" Height="35" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="0,0,0,1" Grid.ColumnSpan="2">
            <TextBlock Text="Header" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Left Sidebar -->
        <Border Background="#363636" Width="70" HorizontalAlignment="Left" Margin="0,35,0,0" BorderBrush="Black" BorderThickness="0,0,1,0">
            <TextBlock Text="Left Sidebar" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>



        <!-- Main Content -->
        <Border Background="White" Margin="84,35,35,50">
            <Canvas x:Name="myCanvas"/>

        </Border>

        <!-- Footer -->
        <Border Background="#363636" Height="50" VerticalAlignment="Bottom" Margin="70,0,0,0" BorderBrush="Black" BorderThickness="0,1,0,0">
            <TextBlock Text="Footer" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

    </Grid>
</Window>
